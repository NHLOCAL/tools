{
  "manifest_version": 3,
  "name": "מייצא שרשורים",
  "version": "3.0",
  "description": "מייצא שרשורים מאתרי NodeBB לקובץ JSON נקי או ללוח.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icon64.png"
    }
  },
  "icons": {
    "64": "icon64.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/topic/*"
      ],
      "js": [
        "turndown.js",
        "content.js"
      ]
    }
  ]
}